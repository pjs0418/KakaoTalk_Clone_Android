<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/title_bar" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="200dp"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="item_1, item_2, item_3, item_4"
        app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/item_1"
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:background="#00ff0000"
            android:drawableLeft="@drawable/search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/item_2"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/item_2"
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:background="#00ff0000"
            android:drawableLeft="@drawable/add_human"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/item_3"
            app:layout_constraintLeft_toLeftOf="@id/item_1" />

        <Button
            android:id="@+id/item_3"
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:background="#00ff0000"
            android:drawableLeft="@drawable/sound"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/item_4"
            app:layout_constraintLeft_toLeftOf="@id/item_2" />

        <Button
            android:id="@+id/item_4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:drawableLeft= "@drawable/settings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/item_3" />

</androidx.constraintlayout.widget.ConstraintLayout>